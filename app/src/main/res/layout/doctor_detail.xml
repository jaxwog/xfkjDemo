<?xml version="1.0" encoding="utf-8"?>
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    android:background="#ffffff"

    >
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
        <Button
            android:id="@+id/back_before"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="医生详情"
            android:textSize="21dp"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="#000000"
            android:drawableLeft="@drawable/back"
            android:background="#1bb5db"
            android:paddingLeft="20dp"
            />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:padding="20dp">
            <!--医生的头像-->
            <com.xfkj.mrxuyaohui.xfkjdemo.util.image.SmartImageView
                android:id="@+id/image"
                android:layout_width="80dip"
                android:layout_height="60dip"
                android:src="@drawable/ic_launcher" />
            <!--医生的姓名-->
            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dip"
                android:layout_toRightOf="@id/image"
                android:singleLine="true"
                android:text="张三"
                android:textColor="@android:color/black" />
            <!--医生的职位-->
            <TextView
                android:textColor="@android:color/black"
                android:id="@+id/message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/name"
                android:layout_marginLeft="6dip"
                android:text="心理咨询师"
                />
            <!--医生所在的单位-->
            <TextView
                android:textColor="@android:color/black"
                android:id="@+id/work_postion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/image"
                android:layout_below="@id/name"
                android:layout_marginTop="5dip"
                android:text="中国人民解放军总医院（501医院）"
                android:textSize="14sp" />
            <!--医生治疗的疾病-->
            <TextView
                android:textColor="@android:color/black"
                android:id="@+id/main_cute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="主治：抑郁症"
                android:layout_toRightOf="@id/image"
                android:layout_below="@id/work_postion"
                android:layout_marginTop="5dp"
                />
            <!--收藏-->
            <ImageButton
                android:id="@+id/souchang"
                android:background="#ffffff"
                android:onClick="click"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@id/name"
                android:src="@drawable/souchang"
                />
            <!--详情-->
            <ImageButton
                android:id="@+id/detail"
                android:background="#ffffff"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/souchang"
                android:src="@drawable/xjangqing"
                android:layout_alignTop="@id/work_postion"
                android:layout_alignBottom="@id/main_cute"
                android:layout_alignParentRight="true"
                />

        </RelativeLayout>
        </LinearLayout>
    <View
        android:layout_height="1px"
        android:background="#cecece"
        android:layout_width="fill_parent"></View>
    <!--医生服务-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#ececec"
        >
        <LinearLayout
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/shutiao"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="医生服务"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center|center_vertical"
                android:textColor="#000000"
                />
            </LinearLayout>
        <View
            android:layout_height="1px"
            android:background="#cecece"
            android:layout_width="fill_parent"></View>
        <com.xfkj.mrxuyaohui.xfkjdemo.self_define.NoScrollListView
            android:id="@+id/list_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:footerDividersEnabled="false"
            android:headerDividersEnabled="false"
            />
        </LinearLayout>

    <!--用户评价-->
    <View
        android:layout_height="1px"
        android:background="#cecece"
        android:layout_width="fill_parent"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#ececec"
        >
        <LinearLayout
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/shutiao"
                android:layout_marginLeft="30dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户评价"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                />
        </LinearLayout>
        <View
            android:layout_height="1px"
            android:background="#cecece"
            android:layout_width="fill_parent"></View>
        <com.xfkj.mrxuyaohui.xfkjdemo.self_define.NoScrollListView
            android:id="@+id/list_3"
            android:dividerHeight="1dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:footerDividersEnabled="false"
            android:divider="@null"
            android:headerDividersEnabled="false"
            />
    </LinearLayout>

</LinearLayout>
    </ScrollView>