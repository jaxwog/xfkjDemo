<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cecece"
    >
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cecece">
    <Button
        android:id="@+id/title"
        android:drawableLeft="@drawable/back"
        android:text="支付"
        android:background="#1bb5db"
        android:paddingLeft="20dp"
        android:textSize="21dp"
        android:layout_height="50dp"
        android:layout_width="match_parent"/>
    <RelativeLayout
        android:id="@+id/title1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/title"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#ffffff"
        android:gravity="center_vertical|center"
        android:layout_marginTop="10dp"
        >

        <ImageView
            android:id="@+id/image"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/phone_ct"
            android:paddingLeft="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/image"
            android:text="liu"
            android:layout_marginTop="10dp"
            android:id="@+id/fuwu_name"
            android:textSize="18dp"
            android:textColor="#000000"
            android:layout_marginLeft="40dp"
            />
        <TextView
            android:id="@+id/fuwu_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="200元"
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            />
        </RelativeLayout>
    <TableLayout
        android:id="@+id/content"
        android:layout_below="@id/title1"
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_height="wrap_content">
        <TableRow>
            <TextView
                android:id="@+id/zhengzhuang1"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:textColor="#000000"
                android:background="#cecece"
                android:gravity="center_vertical"
                android:text="症状说明"
                />
        </TableRow>
        <TableRow>
            <EditText
                android:id="@+id/zhengzhuang"
                android:layout_weight="1"
                android:lines="3"
                android:hint="请说明一下你的症状"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            </TableRow>

        </TableLayout>
    <TableLayout
        android:id="@+id/title2"
        android:background="#ffffff"
        android:layout_below="@id/content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:textColor="#000000"
                android:background="#cecece"
                android:gravity="center_vertical"
                android:text="就诊时间"
                />
            </TableRow>
        <TableRow
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="选定时间："
                android:gravity="center"
                android:layout_weight="1"
                />
            <EditText
                android:id="@+id/time"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textColor="#000000"
                android:hint="请选择与医生联系的时间"
                android:layout_weight="2"
                />
        </TableRow>
        <TableRow
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="手机号码："
                android:textColor="#000000"
                android:layout_weight="1"

                />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:hint="请输入你的手机号码"
                android:layout_weight="2"
                android:id="@+id/phone"

                />
        </TableRow>
        </TableLayout>
    <TextView
        android:id="@+id/title3"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@id/title2"
        android:text="选择支付方式"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_marginLeft="15dp"
        />
    <RadioGroup
        android:id="@+id/title4"
        android:layout_below="@id/title3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:background="#ffffff"

        >
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="微信支付"
            android:textColor="#000000"
            android:drawablePadding="30dp"
            android:button="@null"
            android:background="@drawable/login_button_selector"
            android:paddingLeft="10dp"
            android:drawableRight="@drawable/dianji"
            android:paddingRight="20dp"
            android:drawableLeft="@drawable/weixin_logo"

            />

        </RadioGroup>
    <Button
        android:id="@+id/pay"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="立即购买"
        android:onClick="click"
        android:layout_below="@id/title4"
        android:layout_marginTop="40dp"
        android:background="@drawable/press_button_lan"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"

        />

</RelativeLayout>
    </ScrollView>
