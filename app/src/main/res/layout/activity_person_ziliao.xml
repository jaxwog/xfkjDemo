<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <Button
        android:id="@+id/title"
        android:text="个人资料"
        android:onClick="onClick"
        android:textSize="21dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#1bb5db"
        android:drawableLeft="@drawable/back"
        android:paddingLeft="15dp"/>
    <TableLayout
        android:id="@+id/content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/title"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <TableRow>
            <TextView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="昵称:"
                android:textColor="#000000"
                android:layout_gravity="right"
                android:gravity="left|center_vertical"
                />
            <EditText
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:hint="请输入昵称"
                android:gravity="center"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                />
            </TableRow>
        <TableRow>
            <TextView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="性别:"
                android:textColor="#000000"
                android:paddingLeft="30dp"
                android:layout_gravity="right"
                android:gravity="left|center_vertical"
                android:layout_weight="2"
                />
            <RadioGroup
                android:id="@+id/sex"
                android:layout_weight="6"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/male"
                    android:textColor="#000000"
                    android:text="男"/>
                <RadioButton
                    android:layout_marginLeft="40dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/female"
                    android:checked="true"
                    android:textColor="#000000"
                    android:text="女"/>

            </RadioGroup>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="签名:"
                android:paddingLeft="30dp"
                android:layout_gravity="right"
                android:textColor="#000000"
                android:gravity="left|center_vertical"
                />
            <EditText
                android:id="@+id/peo_desc"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:hint="请输入签名"
                android:gravity="center"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="年龄:"
                android:paddingLeft="30dp"
                android:layout_gravity="right"
                android:textColor="#000000"
                android:gravity="left|center_vertical"
                />
            <EditText
                android:id="@+id/age"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:hint="请输入年龄"
                android:gravity="center"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="手机号:"
                android:paddingLeft="30dp"
                android:textColor="#000000"
                android:layout_gravity="right"

                android:gravity="left|center_vertical"
                />
            <TextView
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center"
                android:textColor="#000000"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="账户余额:"
                android:paddingLeft="30dp"
                android:layout_gravity="right"
                android:textColor="#000000"
                android:gravity="left|center_vertical"
                />
            <TextView
                android:id="@+id/balance"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center"
                android:textColor="#000000"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                />
        </TableRow>
        </TableLayout>
    <View
        android:layout_below="@id/content"
        android:layout_height="1dip"
        android:background="#cecece"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="fill_parent"
        android:id="@+id/line0"
        />
    <Button

        android:id="@+id/xiugai"
        android:layout_width="fill_parent"
        android:layout_height="45dip"
        android:text="修改密码"
        android:paddingLeft="30dp"
        android:paddingRight="10dp"
        android:onClick="onClick"

        android:gravity="left|center_vertical"
        android:drawableRight="@drawable/xiangyou"
        android:layout_below="@+id/line0"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/login_button_selector"/>
    <View
        android:layout_below="@id/xiugai"
        android:layout_height="1dip"
        android:background="#cecece"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="fill_parent"
        android:id="@+id/line1"
        />
    <Button
        android:id="@+id/peo_sub"
        android:layout_width="230dip"
        android:layout_height="50dip"
        android:text="保存"
        android:onClick="onClick"
        android:gravity="center"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/line1"
        android:background="@drawable/press_button_lan"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
