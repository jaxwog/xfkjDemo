<?xml version="1.0" encoding="utf-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@android:id/tabhost"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff" >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >
        <FrameLayout
            android:id="@+id/msg_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" >
            <TextView
                android:id="@+id/tv_wb"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="#1bb5db" >
            </TextView>
        </FrameLayout>
        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="1.0" />
        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.0"
            android:visibility="gone" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#cecece"
            />
        <RadioGroup
            android:id="@+id/main_radio"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_gravity="bottom"
            android:background="#ececec"
            android:gravity="center_vertical"
            android:orientation="horizontal" >
            <RadioButton
                android:id="@+id/radio_button0"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:paddingTop="7dp"
                android:textColor="@drawable/text_press_xiaoguo"
                android:gravity="center_vertical|center_horizontal"
                android:layout_height="fill_parent"
                android:layout_marginTop="2.0dip"
                android:drawableTop="@drawable/check_box_click_shouye"
                android:text="首页"
                android:checked="true"/>
            <RadioButton
                android:id="@+id/radio_button1"
                android:layout_height="fill_parent"
                android:layout_marginTop="2.0dip"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:paddingTop="7dp"
                android:button="@null"
                android:textColor="@drawable/text_press_xiaoguo"
                android:gravity="center_vertical|center_horizontal"
               android:drawableTop="@drawable/check_box_click_zhenduan"
                android:tag="radio_button1"
                android:text="诊断" />
            <RadioButton
                android:id="@+id/radio_button2"
                android:layout_height="fill_parent"
                android:layout_marginTop="2.0dip"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:paddingTop="7dp"
                android:textColor="@drawable/text_press_xiaoguo"
                android:gravity="center_vertical|center_horizontal"
                android:drawableTop="@drawable/check_box_click_news"
                android:tag="radio_button2"
                android:text="新闻" />
            <RadioButton
                android:id="@+id/radio_button3"
                android:layout_height="fill_parent"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:paddingTop="7dp"
                android:textColor="@drawable/text_press_xiaoguo"
                android:gravity="center_vertical|center_horizontal"
                android:layout_marginTop="2.0dip"
                android:drawableTop="@drawable/check_box_click_wode"
                android:tag="radio_button3"
                android:text="我的" />
        </RadioGroup>
    </LinearLayout>
</TabHost>